<%# <h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p> %>
<div class='d-center p-5 m-1'>
  <h1>New Game</h1>
</div>

<div >
  <ul>
    <% @letters.each do |letter| %>
    <button  class="d-inline px-3 m-1 btn btn-primary text-white font-weight-bold"><%= letter.upcase %></button>
    <% end %>
  </ul>
</div>

<div class='p-5 m-1'>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false" class='d-flex'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :authenticity_letters, @letters %>
    <input type="text" name="score">
    <input type="submit" value="Answer" class='btn btn-primary'>
  </form>
</div>
